<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Republic Surprise</title>
    <style>
      :root {
        --bg: #fef6e4;
        --card: #ffffff;
        --accent: #ff9f1c;
        --accent-2: #2ec4b6;
        --text: #172b4d;
        --muted: #5f6c7b;
        --error: #c81e1e;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Segoe UI", Tahoma, sans-serif;
        background: radial-gradient(circle at 18% 18%, #ffd6a5 0, rgba(255,214,165,0) 32%), radial-gradient(circle at 78% 0%, #a0e8af 0, rgba(160,232,175,0) 32%), var(--bg);
        color: var(--text);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      .card {
        width: min(420px, 100%);
        background: var(--card);
        border: 1px solid rgba(0,0,0,0.05);
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 14px 30px rgba(0,0,0,0.12);
      }
      h1 { margin: 0 0 8px; letter-spacing: 0.5px; }
      p { margin: 0 0 16px; color: var(--muted); }
      form { display: grid; gap: 14px; }
      label {
        display: flex;
        flex-direction: column;
        gap: 6px;
        color: var(--muted);
        font-size: 0.9rem;
      }
      input {
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid rgba(0,0,0,0.08);
        background: #fefaf2;
        color: var(--text);
      }
      button {
        background: var(--accent);
        color: #0f172a;
        border: none;
        border-radius: 10px;
        padding: 12px 14px;
        font-weight: 700;
        cursor: pointer;
        transition: transform 0.15s ease, box-shadow 0.2s ease;
      }
      button:hover { transform: translateY(-2px); box-shadow: 0 10px 22px rgba(251,191,36,0.35); }
      button:disabled { opacity: 0.6; cursor: not-allowed; box-shadow: none; }
      .status {
        font-size: 0.9rem;
        color: var(--muted);
        min-height: 18px;
      }
      .helper {
        margin: 12px 0 0;
        font-size: 0.85rem;
        color: var(--muted);
      }
      .status.error { color: var(--error); }
      .links { margin-top: 12px; font-size: 0.9rem; }
      .links a { color: var(--accent); text-decoration: none; }
      .flash {
        padding: 10px 12px;
        border-radius: 10px;
        margin-bottom: 12px;
        font-size: 0.95rem;
      }
      .flash.error {
        background: rgba(248, 113, 113, 0.15);
        border: 1px solid rgba(248, 113, 113, 0.4);
        color: #c81e1e;
      }
      .flash.success {
        background: rgba(74, 222, 128, 0.15);
        border: 1px solid rgba(74, 222, 128, 0.4);
        color: #bbf7d0;
      }
      .page {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding: 72px 16px 96px;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="page">
      <div class="card">
      <h1>Login</h1>
      <p>Connect your MetaMask wallet to access your account.</p>
      <% if (errorMessages && errorMessages.length) { %>
        <% errorMessages.forEach(function(msg) { %>
          <div class="flash error"><%= msg %></div>
        <% }) %>
      <% } %>
      <% if (successMessages && successMessages.length) { %>
        <% successMessages.forEach(function(msg) { %>
          <div class="flash success"><%= msg %></div>
        <% }) %>
      <% } %>
      <form id="loginForm" method="post" action="/login">
        <label>
          Wallet Address
          <input type="text" name="walletAddress" id="walletAddress" required placeholder="0x..." readonly />
        </label>
        <button type="button" id="connectWallet">Connect MetaMask</button>
        <button type="submit" id="loginBtn" disabled>Sign in</button>
        <div class="status" id="status"></div>
        <p class="helper">Need to switch accounts? Open the MetaMask extension and select the wallet you want to use, then click Connect again.</p>
      </form>
      <div class="links">
        No account? <a href="/register">Register here</a>
      </div>
      </div>
    </div>
    <%- include('partials/footer') %>
    <script>
      const form = document.getElementById('loginForm');
      const statusEl = document.getElementById('status');

      const connectBtn = document.getElementById('connectWallet');
      const loginBtn = document.getElementById('loginBtn');
      const walletInput = document.getElementById('walletAddress');

      const pickCurrentAccount = async () => {
        try {
          // Prefer MetaMask's selectedAddress if present, otherwise fall back to eth_accounts[0]
          if (window.ethereum && window.ethereum.selectedAddress) {
            return window.ethereum.selectedAddress;
          }
          const accounts = await window.ethereum.request({ method: 'eth_accounts' });
          return (accounts && accounts[0]) || '';
        } catch (_err) {
          return '';
        }
      };

      const setStatus = (msg, isError) => {
        statusEl.textContent = msg || '';
        statusEl.className = isError ? 'status error' : 'status';
      };

      const validateAccount = async (account) => {
        try {
          const response = await fetch(`/register/check-wallet?walletAddress=${encodeURIComponent(account)}`);
          if (!response.ok) throw new Error('Unable to verify wallet.');
          const payload = await response.json();
          if (!payload.inUse) {
            setStatus('Wallet not registered yet. Please register before logging in.', true);
            return false;
          }
          setStatus('Wallet connected and registered.', false);
          return true;
        } catch (err) {
          console.error(err);
          setStatus('Unable to verify wallet. Try again.', true);
          return false;
        }
      };

      const connectWallet = async () => {
        if (!window.ethereum) {
          setStatus('MetaMask not detected. Please install MetaMask.', true);
          return;
        }
        try {
          setStatus('Requesting wallet...', false);
          // Always trigger MetaMask connect, then read the actively selected account
          await window.ethereum.request({ method: 'eth_requestAccounts' });
          // Always grab the currently active account after permission prompt
          const account = await pickCurrentAccount();
          if (!account) {
            setStatus('No wallet selected.', true);
            return;
          }
          walletInput.value = account;
          const isRegistered = await validateAccount(account);
          loginBtn.disabled = !isRegistered;
        } catch (err) {
          setStatus(err && err.message ? err.message : 'Unable to connect wallet.', true);
        }
      };

      connectBtn.addEventListener('click', connectWallet);

      // Keep wallet address in sync when user switches accounts inside MetaMask
      if (window.ethereum && window.ethereum.on) {
        window.ethereum.on('accountsChanged', async (accounts) => {
          const account = (accounts && accounts[0]) || '';
          walletInput.value = account;
          loginBtn.disabled = true;
          if (!account) {
            setStatus('No wallet selected. Please choose an account in MetaMask.', true);
            return;
          }
          const isRegistered = await validateAccount(account);
          loginBtn.disabled = !isRegistered;
        });
      }

      form.addEventListener('submit', (e) => {
        if (!walletInput.value) {
          e.preventDefault();
          setStatus('Wallet address is required.', true);
        }
      });
    </script>
  </body>
</html>
