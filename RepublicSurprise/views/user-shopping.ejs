<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop | Republic Surprise</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=DM+Sans:wght@400;500;700&display=swap');
      :root {
        --bg: #f5f3ec;
        --panel: #e0ddd4;
        --card: #ffffff;
        --ink: #121217;
        --muted: #5f6570;
        --accent: #f97316;
        --accent-2: #0f172a;
        --line: rgba(0, 0, 0, 0.08);
        --shadow: 0 18px 38px rgba(15, 23, 42, 0.16);
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Space Grotesk", "DM Sans", "Segoe UI", Tahoma, sans-serif;
        background:
          radial-gradient(circle at 12% 18%, rgba(249, 189, 135, 0.35), transparent 36%),
          radial-gradient(circle at 82% 12%, rgba(92, 112, 255, 0.18), transparent 32%),
          var(--bg);
        color: var(--ink);
        min-height: 100vh;
        padding-top: 80px;   /* prevent header overlap */
        padding-bottom: 72px; /* prevent footer overlap */
      }
      .page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 32px 20px 64px;
      }
      .topbar {
        display: flex;
        flex-direction: column;
        gap: 12px;
        align-items: stretch;
        background: var(--panel);
        color: var(--ink);
        padding: 14px 16px;
        border-radius: 18px;
        border: 1px solid rgba(0, 0, 0, 0.06);
        box-shadow: 0 10px 22px rgba(0, 0, 0, 0.08);
      }
      .topbar-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
      }
      .nav-wrapper {
        display: flex;
        align-items: center;
      }
      .nav-wrapper header { margin: 0; }
      .nav-wrapper header > div { width: auto; }
      .top-actions {
        display: flex;
        align-items: center;
        gap: 12px;
      }
      .search {
        display: inline-flex;
        align-items: center;
        background: #fdfbf7;
        border: 1px solid var(--line);
        border-radius: 999px;
        padding: 8px 12px 8px 10px;
        gap: 8px;
        min-width: 240px;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.7);
      }
      .search svg { width: 16px; height: 16px; color: var(--muted); }
      .search input {
        border: none;
        outline: none;
        background: transparent;
        font: inherit;
        color: var(--ink);
        width: 100%;
      }
      .icon-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid var(--line);
        background: var(--card);
        cursor: pointer;
        color: var(--ink);
        transition: transform 0.15s ease, box-shadow 0.2s ease, border-color 0.15s ease;
      }
      .icon-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
        border-color: rgba(0, 0, 0, 0.12);
      }
      .icon-btn svg { width: 18px; height: 18px; }
      .cart-badge {
        position: relative;
      }
      .cart-count {
        position: absolute;
        top: -6px;
        right: -6px;
        background: var(--accent);
        color: #fff7ed;
        min-width: 22px;
        height: 22px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 0.78rem;
        font-weight: 700;
        box-shadow: 0 8px 16px rgba(249, 115, 22, 0.35);
      }
      .layout {
        display: grid;
        grid-template-columns: 260px 1fr;
        gap: 18px;
        margin-top: 22px;
      }
      .filters {
        background: #fdfbf7;
        border: 1px solid var(--line);
        border-radius: 16px;
        padding: 18px 16px;
        box-shadow: 0 12px 22px rgba(0, 0, 0, 0.06);
      }
      .filters h3 {
        margin: 4px 0 12px;
        font-size: 1rem;
        letter-spacing: 0.4px;
      }
      .filter-group + .filter-group { margin-top: 16px; }
      .filter-group h4 {
        margin: 0 0 10px;
        font-size: 0.95rem;
        letter-spacing: 0.3px;
      }
      .option {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px 6px;
        cursor: pointer;
        border-radius: 12px;
        transition: background 0.15s ease, transform 0.15s ease;
      }
      .option:hover { background: rgba(0, 0, 0, 0.035); transform: translateX(2px); }
      .option input { accent-color: var(--accent); }
      .option span { color: var(--muted); }
      .legend {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 0.92rem;
        color: var(--muted);
      }
      .legend .dot {
        width: 18px;
        height: 8px;
        border-radius: 12px;
        display: inline-block;
      }
      .legend .in { background: #10b981; }
      .legend .out { background: #ef4444; }
      .catalog {
        background: #ffffff;
        border-radius: 18px;
        border: 1px solid rgba(0, 0, 0, 0.06);
        box-shadow: var(--shadow);
        padding: 20px 20px 26px;
      }
      .catalog-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 12px;
      }
      .eyebrow {
        letter-spacing: 0.12em;
        font-size: 0.82rem;
        color: var(--muted);
        margin: 0 0 6px;
        text-transform: uppercase;
      }
      h1 {
        margin: 0 0 8px;
        font-size: clamp(1.6rem, 2.1vw, 2.2rem);
        letter-spacing: 0.4px;
      }
      .lead {
        margin: 0;
        color: var(--muted);
        max-width: 640px;
      }
      .pill {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        background: #f7f5ed;
        border-radius: 999px;
        padding: 10px 12px;
        border: 1px solid rgba(0, 0, 0, 0.06);
      }
      .pill strong { color: var(--ink); }
      .pill button {
        border: none;
        background: transparent;
        color: var(--muted);
        cursor: pointer;
        font-weight: 600;
      }
      .grid {
        display: grid;
        gap: 16px;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        margin-top: 8px;
      }
      .card {
        background: #ffffff;
        border-radius: 16px;
        border: 1px solid var(--line);
        box-shadow: 0 12px 22px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: transform 0.2s ease, box-shadow 0.25s ease;
      }
      .card:hover { transform: translateY(-4px); box-shadow: 0 18px 30px rgba(0, 0, 0, 0.12); }
      .image {
        position: relative;
        padding: 10px;
        background: #f7f5ef;
        border-bottom: 1px solid var(--line);
        min-height: 160px;
        display: grid;
        place-items: center;
      }
      .image img {
        width: 100%;
        height: 160px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.5);
      }
      .badge {
        position: absolute;
        top: 12px;
        left: 12px;
        padding: 6px 10px;
        background: rgba(255, 255, 255, 0.92);
        border-radius: 999px;
        border: 1px solid var(--line);
        font-size: 0.82rem;
        font-weight: 700;
        color: var(--ink);
        letter-spacing: 0.2px;
      }
      .card-body { padding: 12px 12px 14px; display: grid; gap: 6px; }
      .title-row {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: 10px;
      }
      .card h3 {
        margin: 0;
        font-size: 1rem;
        letter-spacing: 0.2px;
      }
      .price {
        font-weight: 700;
        color: var(--accent-2);
      }
      .meta {
        margin: 0;
        color: var(--muted);
        font-size: 0.92rem;
      }
      .stock {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 0.9rem;
        color: var(--ink);
        font-weight: 600;
      }
      .stock .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
      }
      .card-actions {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 8px;
        margin-top: 4px;
      }
      .ghost-btn {
        border: 1px dashed var(--line);
        background: #f8f6f0;
        padding: 8px 12px;
        border-radius: 12px;
        cursor: pointer;
        font-weight: 600;
        color: var(--muted);
        transition: border-color 0.15s ease, color 0.15s ease;
      }
      .ghost-btn:hover { border-color: rgba(0, 0, 0, 0.18); color: var(--ink); }
      .add-btn {
        border: none;
        background: var(--accent);
        color: #0f172a;
        padding: 10px 12px;
        border-radius: 12px;
        font-weight: 800;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        letter-spacing: 0.2px;
        box-shadow: 0 12px 24px rgba(249, 115, 22, 0.35);
        transition: transform 0.15s ease, box-shadow 0.2s ease;
      }
      .add-btn:disabled {
        background: #e2e8f0;
        color: #6b7280;
        box-shadow: none;
        cursor: not-allowed;
      }
      .add-btn:not(:disabled):hover { transform: translateY(-2px); box-shadow: 0 16px 28px rgba(249, 115, 22, 0.4); }
      .empty {
        text-align: center;
        color: var(--muted);
        padding: 18px 12px;
        margin: 8px 0 0;
        border: 1px dashed var(--line);
        border-radius: 12px;
        display: none;
      }
      .toast {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: var(--accent-2);
        color: #f8fafc;
        padding: 12px 14px;
        border-radius: 14px;
        box-shadow: 0 14px 30px rgba(15, 23, 42, 0.25);
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 0.2s ease, transform 0.2s ease;
        pointer-events: none;
      }
      .toast.show { opacity: 1; transform: translateY(0); }
      @media (max-width: 900px) {
        .layout { grid-template-columns: 1fr; }
        .filters { order: 2; }
        .catalog { order: 1; }
        .topbar { align-items: flex-start; flex-direction: column; }
        .top-actions { width: 100%; }
        .search { flex: 1; min-width: unset; width: 100%; }
      }
      @media (max-width: 540px) {
        .page { padding: 20px 14px 48px; }
        .grid { grid-template-columns: repeat(auto-fill, minmax(160px, 1fr)); }
      }
    </style>
  </head>
  <body>
    <div class="page">
      <header class="topbar">
        <div class="topbar-row">
          <div class="nav-wrapper">
            <%- include('partials/header') %>
          </div>
          <div class="top-actions">
            <label class="search">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="11" cy="11" r="7"></circle>
                <line x1="16.65" y1="16.65" x2="21" y2="21"></line>
              </svg>
              <input type="search" id="searchInput" placeholder="Search collectibles" autocomplete="off" />
            </label>
            <button class="icon-btn" title="Profile">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                <circle cx="12" cy="7" r="4" />
              </svg>
              <span><%= user && user.walletAddress ? user.walletAddress : (user ? 'Account' : 'Guest') %></span>
            </button>
            <a class="icon-btn cart-badge" href="/cart" title="Cart">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="9" cy="21" r="1"></circle>
                <circle cx="20" cy="21" r="1"></circle>
                <path d="M1 1h4l1.68 10.06a2 2 0 0 0 2 1.69h7.72a2 2 0 0 0 2-1.69L19 6H6" />
              </svg>
              <span class="cart-count" data-cart-count><%= cartCount || 0 %></span>
            </a>
          </div>
        </div>
      </header>

      <main class="layout">
        <aside class="filters">
          <h3>Filter</h3>
          <div class="filter-group">
            <h4>Sort</h4>
            <label class="option">
              <input type="radio" name="sort" value="featured" checked />
              <span>Featured picks</span>
            </label>
            <label class="option">
              <input type="radio" name="sort" value="price-asc" />
              <span>Price: Low to High</span>
            </label>
            <label class="option">
              <input type="radio" name="sort" value="price-desc" />
              <span>Price: High to Low</span>
            </label>
            <label class="option">
              <input type="radio" name="sort" value="name" />
              <span>Name A-Z</span>
            </label>
          </div>
          <div class="filter-group">
            <h4>Availability</h4>
            <label class="option">
              <input type="radio" name="availability" value="all" checked />
              <span>All items</span>
            </label>
            <label class="option">
              <input type="radio" name="availability" value="in" />
              <span>In stock</span>
            </label>
            <label class="option">
              <input type="radio" name="availability" value="out" />
              <span>Out of stock</span>
            </label>
            <div style="margin: 8px 0 0;">
              <span class="legend"><span class="dot in"></span>In stock</span>
              <span class="legend" style="margin-left: 12px;"><span class="dot out"></span>Out of stock</span>
            </div>
          </div>
        </aside>

        <section class="catalog">
          <div class="catalog-header">
            <div>
              <p class="eyebrow">Blind boxes & collectibles</p>
              <h1>Shop Your Collection!</h1>
              <p class="lead">Discover playful, artful toys. Pick your favorite figure and send it to your cart.</p>
            </div>
            <div class="pill">
              <strong id="itemCount">0 items</strong>
              <button type="button" id="resetFilters">Reset</button>
            </div>
          </div>
          <div class="grid" id="productGrid"></div>
          <p class="empty" id="emptyState">No items match your filters yet.</p>
        </section>
      </main>
      <%- include('partials/footer') %>
    </div>
    <div class="toast" id="toast" aria-live="polite"></div>
    <script>
      const serverProductsRaw = <%- JSON.stringify(products || []) %>;
      const serverProducts = Array.isArray(serverProductsRaw)
        ? serverProductsRaw.filter((item) => item.active !== false)
        : [];
      const demoProducts = [
        { id: 'lolo', name: 'Lolo the Piggy', price: 49.9, stock: 8, badge: 'Single box', image: '/images/lolo_the_piggy.png', description: 'A cheerful trio of piggy pals.' },
        { id: 'pino', name: 'Pino JoJo', price: 37.9, stock: 5, badge: 'Single box', image: '/images/pino_jojo.png', description: 'Dreamy pastel friend.' },
        { id: 'hinono', name: 'Hinono', price: 61.9, stock: 0, badge: 'Single box', image: '/images/hinono.png', description: 'Collector set of mystical figures.' },
        { id: 'zimama', name: 'Zimama', price: 37.9, stock: 3, badge: 'Single box', image: '/images/zimama.png', description: 'Forest critter guardian.' },
        { id: 'sweet-bun', name: 'Sweet Bun', price: 20.9, stock: 12, badge: 'Single box', image: '/images/sweet_bun.png', description: 'Fluffy friend for cozy nights.' },
        { id: 'hacibubu', name: 'Hacibubu', price: 38.8, stock: 7, badge: 'Limited', image: '/images/hacibubu.png', description: 'Limited run surprise.' }
      ];

      const fallbackImages = [
        '/images/lolo_the_piggy.png',
        '/images/pino_jojo.png',
        '/images/hinono.png',
        '/images/zimama.png',
        '/images/sweet_bun.png',
        '/images/hacibubu.png'
      ];

      const normalizeProducts = (list) => {
          return list.map((item, index) => {
            const pickPrice = Number(item.price || 0) || 0;
            const stockFromContract = Number(item.stock || 0) || 0;
            const explicitPrice = Number(item.price || 0);
            const explicitStock = Number(item.stock || 0);
          const badgeContract = 'Single box';
          const price = explicitPrice > 0 ? explicitPrice : pickPrice;
          const stock = Number.isFinite(explicitStock) && explicitStock >= 0 ? explicitStock : stockFromContract;
          const badge = item.badge || badgeContract || 'Single box';
          return {
            id: item.id || `product-${index}`,
            name: item.productName || item.name || 'Mystery figure',
            price,
            stock,
            badge,
            image: item.image || fallbackImages[index % fallbackImages.length],
            description: item.productDescription || item.description || 'Collectible figure'
          };
        });
      };

      const catalog = serverProducts.length ? normalizeProducts(serverProducts) : demoProducts;
      const state = { sort: 'featured', availability: 'all', search: '' };
      const gridEl = document.getElementById('productGrid');
      const countEl = document.getElementById('itemCount');
      const emptyEl = document.getElementById('emptyState');
      const toastEl = document.getElementById('toast');
      const cartCountEl = document.querySelector('[data-cart-count]');
      const searchInput = document.getElementById('searchInput');
      const resetBtn = document.getElementById('resetFilters');

      const formatPrice = (value) => '$' + (Number(value || 0).toFixed(2));

      const updateCartBadge = (count) => {
        if (!cartCountEl) return;
        const safe = Number(count) || 0;
        cartCountEl.textContent = safe;
      };

      const toast = (message) => {
        if (!toastEl) return;
        toastEl.textContent = message;
        toastEl.classList.add('show');
        setTimeout(() => toastEl.classList.remove('show'), 1400);
      };

      const addToCart = async (id) => {
        const item = catalog.find((p) => p.id === id);
        if (!item) return;
        try {
          const response = await fetch('/cart/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
            body: JSON.stringify({ id: item.id, name: item.name, price: item.price, qty: 1 })
          });
          if (response.status === 401) {
            const data = await response.json().catch(() => ({}));
            window.location = data.redirect || '/login';
            return;
          }
          if (!response.ok) throw new Error('cart');
          const data = await response.json();
          updateCartBadge(data.cartCount);
          toast('Added to cart');
        } catch (_err) {
          toast('Unable to add to cart');
        }
      };

      const filterProducts = () => {
        let result = [...catalog];
        if (state.search) {
          const q = state.search.toLowerCase();
          result = result.filter((item) => item.name.toLowerCase().includes(q));
        }
        if (state.availability === 'in') result = result.filter((item) => item.stock > 0);
        if (state.availability === 'out') result = result.filter((item) => item.stock <= 0);
        if (state.sort === 'price-asc') result.sort((a, b) => a.price - b.price);
        if (state.sort === 'price-desc') result.sort((a, b) => b.price - a.price);
        if (state.sort === 'name') result.sort((a, b) => a.name.localeCompare(b.name));
        return result;
      };

      const render = () => {
        const items = filterProducts();
        countEl.textContent = `${items.length} item${items.length === 1 ? '' : 's'}`;
        emptyEl.style.display = items.length ? 'none' : 'block';
        gridEl.innerHTML = items
          .map((item) => {
            const available = item.stock > 0;
            const viewHref = '/product?id=' + encodeURIComponent(item.id);
            return `
              <article class="card">
                <div class="image">
                  <img src="${item.image}" alt="${item.name}" />
                  <div class="badge">${item.badge}</div>
                </div>
                <div class="card-body">
                  <div class="title-row">
                    <h3>${item.name}</h3>
                    <div class="price">${formatPrice(item.price)}</div>
                  </div>
                  <p class="meta">${item.description || ''}</p>
                  <div class="stock">
                    <span class="dot" style="background:${available ? '#10b981' : '#ef4444'}"></span>
                    ${available ? 'In stock' : 'Out of stock'}
                  </div>
                  <div class="card-actions">
                    <a class="ghost-btn" href="${viewHref}">View</a>
                    <button class="add-btn" type="button" data-add="${item.id}" ${available ? '' : 'disabled'} aria-label="Add ${item.name} to cart">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="18" height="18">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l1.68 10.06a2 2 0 0 0 2 1.69h7.72a2 2 0 0 0 2-1.69L19 6H6" />
                      </svg>
                      Add
                    </button>
                  </div>
                </div>
              </article>
            `;
          })
          .join('');
      };

      gridEl.addEventListener('click', (event) => {
        const target = event.target.closest('[data-add]');
        if (target) {
          addToCart(target.dataset.add);
        }
      });

      document.querySelectorAll('input[name="sort"]').forEach((radio) => {
        radio.addEventListener('change', () => {
          state.sort = radio.value;
          render();
        });
      });

      document.querySelectorAll('input[name="availability"]').forEach((radio) => {
        radio.addEventListener('change', () => {
          state.availability = radio.value;
          render();
        });
      });

      searchInput.addEventListener('input', (event) => {
        state.search = event.target.value.trim();
        render();
      });

      resetBtn.addEventListener('click', () => {
        state.sort = 'featured';
        state.availability = 'all';
        state.search = '';
        document.querySelector('input[name="sort"][value="featured"]').checked = true;
        document.querySelector('input[name="availability"][value="all"]').checked = true;
        searchInput.value = '';
        render();
      });

      render();
    </script>
  </body>
</html>
