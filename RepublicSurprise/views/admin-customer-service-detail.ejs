<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ticket <%= ticket.id %> | Customer Service</title>
    <style>
      :root {
        --bg: #fef6e4;
        --card: #ffffff;
        --accent: #ff9f1c;
        --text: #172b4d;
        --muted: #5f6c7b;
        --line: rgba(0,0,0,0.08);
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Segoe UI", Tahoma, sans-serif;
        background: radial-gradient(circle at 18% 18%, #ffd6a5 0, rgba(255,214,165,0) 32%), radial-gradient(circle at 78% 0%, #a0e8af 0, rgba(160,232,175,0) 32%), var(--bg);
        color: var(--text);
        min-height: 100vh;
        padding: 72px 16px 64px;
      }
      .page { max-width: 860px; margin: 0 auto; }
      .card {
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: 18px;
        padding: 22px;
        box-shadow: 0 18px 36px rgba(0,0,0,0.12);
      }
      h1 { margin: 0 0 10px; letter-spacing: 0.4px; }
      .row { display: grid; grid-template-columns: 180px 1fr; gap: 10px; margin-bottom: 8px; }
      .label { font-weight: 700; }
      .actions { margin-top: 16px; display: flex; gap: 10px; flex-wrap: wrap; }
      .action {
        border: none;
        background: var(--accent);
        color: #0f172a;
        border-radius: 10px;
        padding: 10px 12px;
        font-weight: 700;
        cursor: pointer;
        text-decoration: none;
      }
      .attachments { display:flex; gap:10px; flex-wrap:wrap; margin-top:8px; }
      .attachments img { max-width:180px; border:1px solid #eee; border-radius:8px; padding:6px; }
      header, footer {
        position: fixed;
        left: 0;
        right: 0;
        padding: 14px 18px;
        text-align: center;
        background: rgba(255,255,255,0.7);
        backdrop-filter: blur(6px);
        color: var(--text);
      }
      header { top: 0; }
      footer { bottom: 0; }
      header h2, footer p { margin: 0; letter-spacing: 0.5px; }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="page card">
      <h1>Ticket <%= ticket.id %></h1>
      <% if (errorMessages && errorMessages.length) { %>
        <% errorMessages.forEach(function(msg){ %><div style="color:#b45309;"><%= msg %></div><% }) %>
      <% } %>
      <% if (successMessages && successMessages.length) { %>
        <% successMessages.forEach(function(msg){ %><div style="color:#15803d;"><%= msg %></div><% }) %>
      <% } %>
      <div class="row"><div class="label">Order ID</div><div><%= ticket.orderId %></div></div>
      <div class="row"><div class="label">Customer Wallet</div><div><%= ticket.customer %></div></div>
      <div class="row"><div class="label">Reason</div><div><%= ticket.reason || '-' %></div></div>
      <div class="row"><div class="label">Status</div><div><%= ticket.status || '-' %></div></div>
      <div class="row"><div class="label">Refund Type</div><div><%= ticket.type || '-' %></div></div>
      <div class="row"><div class="label">Amount</div><div>$<%= Number(ticket.amount || 0).toFixed(2) %></div></div>
      <% if (ticket.description) { %>
        <div class="row"><div class="label">Details</div><div><%= ticket.description %></div></div>
      <% } %>
      <% if (ticket.resolvedAt) { %>
        <div class="row"><div class="label">Resolved</div><div><%= ticket.resolvedAt %></div></div>
      <% } %>
      <% if (ticket.refundTx) { %>
        <div class="row"><div class="label">Refund Tx</div><div><%= ticket.refundTx %></div></div>
      <% } %>
      <% if (ticket.refundedWallet) { %>
        <div class="row"><div class="label">Refunded Wallet</div><div><%= ticket.refundedWallet %></div></div>
      <% } %>
      <% if (ticket.rejectionReason) { %>
        <div class="row"><div class="label">Rejection Reason</div><div><%= ticket.rejectionReason %></div></div>
      <% } %>
      <% if (order) { %>
        <div class="row"><div class="label">Order Status</div><div><%= order.status %></div></div>
      <% } %>
      <% if (ticket.attachments && ticket.attachments.length) { %>
        <div style="margin-top:12px;">
          <div class="label">Attachments</div>
          <div class="attachments">
            <% ticket.attachments.forEach(function(file){ %>
              <% if (file && file.data && file.mimetype) { %>
                <img src="data:<%= file.mimetype %>;base64,<%= file.data %>" alt="<%= file.name || 'Attachment' %>" />
              <% } %>
            <% }) %>
          </div>
        </div>
      <% } %>
      <form method="post" action="/admin/customer-service/<%= ticket.id %>" style="margin-top:18px; display:grid; gap:10px;">
        <label style="display:flex; flex-direction:column; gap:6px; font-weight:600; color:var(--muted);">
          Refund Type
          <select name="refundType" id="refundType" required style="padding:10px 12px; border-radius:12px; border:1px solid rgba(0,0,0,0.12); background:#fefaf2;">
            <option value="">Select type</option>
            <option value="Full" <%= ticket.type === 'Full' ? 'selected' : '' %>>Full</option>
            <option value="Partial" <%= ticket.type === 'Partial' ? 'selected' : '' %>>Partial</option>
          </select>
        </label>
        <label style="display:flex; flex-direction:column; gap:6px; font-weight:600; color:var(--muted);">
          Rejection Reason (required if rejecting)
          <textarea name="rejectionReason" id="rejectionReason" maxlength="300" style="padding:10px 12px; border-radius:12px; border:1px solid rgba(0,0,0,0.12); background:#fefaf2; min-height:90px;"></textarea>
        </label>
        <div class="actions">
          <button class="action" type="submit" name="action" value="approve" <%= ticket.status === 'Refund Accepted' ? 'disabled' : '' %>>Accept</button>
          <button class="action" type="submit" name="action" value="reject" <%= ticket.status === 'Refund Rejected' ? 'disabled' : '' %>>Reject</button>
        </div>
      </form>
      <div class="actions">
        <a class="action" href="/admin/customer-service">Back to Customer Service</a>
        <a class="action" href="/admin/orders">Back to Orders</a>
      </div>
    </div>
    <%- include('partials/footer') %>
    <script>
      (function() {
        var form = document.querySelector('form[action^="/admin/customer-service/"]');
        var refundType = document.getElementById('refundType');
        var rejection = document.getElementById('rejectionReason');
        if (!form || !refundType || !rejection) return;
        form.addEventListener('submit', function(e) {
          var action = (document.activeElement && document.activeElement.value) || '';
          if (!refundType.value) {
            e.preventDefault();
            alert('Select a refund type before submitting.');
            return;
          }
          if (action === 'reject' && !rejection.value.trim()) {
            e.preventDefault();
            alert('Please provide a rejection reason.');
          }
        });
      })();
    </script>
  </body>
</html>
