<header style="position:fixed; top:0; left:0; right:0; padding:14px 18px; text-align:center; background:rgba(255,255,255,0.85); backdrop-filter:blur(6px); color:#172b4d; z-index:1000; box-shadow:0 10px 24px rgba(0,0,0,0.08);">
  <div style="display:flex; align-items:center; justify-content: space-between; gap:12px;">
    <div style="display:flex; align-items:center; gap:16px;">
      <h2 style="margin:0;">Republic Surprise</h2>
      <% if (user) { %>
        <nav style="display:flex; gap:10px; align-items:center; flex-wrap:wrap;">
          <% if (user.role === 'user') { %>
            <a href="/user/home" style="text-decoration:none; color:#172b4d; font-weight:700;">User Home</a>
            <a href="/shopping" style="text-decoration:none; color:#172b4d; font-weight:700;">Shopping</a>
            <a href="/cart" style="text-decoration:none; color:#172b4d; font-weight:700;">Cart</a>
            <a href="/order-tracking" style="text-decoration:none; color:#172b4d; font-weight:700;">Order Tracking</a>
            <a href="/support" style="text-decoration:none; color:#172b4d; font-weight:700;">Customer Service</a>
          <% } else if (user.role === 'admin') { %>
            <a href="/admin/dashboard" style="text-decoration:none; color:#172b4d; font-weight:700;">Admin Dashboard</a>
          <% } else if (user.role === 'delivery man') { %>
            <a href="/delivery/dashboard" style="text-decoration:none; color:#172b4d; font-weight:700;">Delivery Dashboard</a>
          <% } %>
        </nav>
      <% } %>
    </div>
    <% const safeHide = (typeof hideLoginButton !== 'undefined') ? hideLoginButton : (typeof locals !== 'undefined' && typeof locals.hideLoginButton !== 'undefined' ? locals.hideLoginButton : false); %>
    <% const showLoginButton = !safeHide; %>
    <% if (user) { %>
      <form method="post" action="/logout" style="margin:0;">
        <button type="submit" style="
          background:#ff9f1c;
          color:#0f172a;
          border:none;
          border-radius:10px;
          padding:8px 12px;
          font-weight:700;
          cursor:pointer;
          box-shadow:0 8px 16px rgba(255,159,28,0.25);
        ">Logout</button>
      </form>
    <% } else if (showLoginButton) { %>
      <a href="/login" style="
        background:#2ec4b6;
        color:#0f172a;
        border:none;
        border-radius:10px;
        padding:8px 12px;
        font-weight:700;
        text-decoration:none;
      ">Login</a>
    <% } %>
  </div>
</header>
