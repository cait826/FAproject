<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= product ? product.name : 'Product' %> | Republic Surprise</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;600;700&family=DM+Sans:wght@400;500&display=swap');
      :root {
        --bg: #f5f3ec;
        --panel: #e0ddd4;
        --card: #ffffff;
        --ink: #0f172a;
        --muted: #5f6570;
        --accent: #f97316;
        --line: rgba(0, 0, 0, 0.08);
        --shadow: 0 18px 38px rgba(15, 23, 42, 0.16);
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Space Grotesk", "DM Sans", "Segoe UI", Tahoma, sans-serif;
        background:
          radial-gradient(circle at 18% 18%, rgba(249, 189, 135, 0.35), transparent 36%),
          radial-gradient(circle at 82% 8%, rgba(92, 112, 255, 0.18), transparent 32%),
          var(--bg);
        color: var(--ink);
        min-height: 100vh;
      }
      .page { max-width: 1100px; margin: 0 auto; padding: 28px 18px 72px; }
      .topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        background: var(--panel);
        padding: 12px 14px;
        border-radius: 16px;
        border: 1px solid rgba(0,0,0,0.06);
        box-shadow: 0 10px 22px rgba(0, 0, 0, 0.08);
      }
      .brand { font-weight: 700; letter-spacing: 0.5px; font-size: 1.05rem; }
      .back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        color: var(--ink);
        font-weight: 700;
        padding: 8px 12px;
        border-radius: 12px;
        background: #fdfbf7;
        border: 1px solid var(--line);
      }
      .actions { display: inline-flex; align-items: center; gap: 10px; }
      .icon-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid var(--line);
        background: var(--card);
        cursor: pointer;
        color: var(--ink);
        transition: transform 0.15s ease, box-shadow 0.2s ease, border-color 0.15s ease;
      }
      .icon-btn:hover { transform: translateY(-2px); box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12); border-color: rgba(0,0,0,0.12); }
      .cart-badge { position: relative; }
      .cart-count {
        position: absolute;
        top: -6px;
        right: -6px;
        background: var(--accent);
        color: #fff7ed;
        min-width: 22px;
        height: 22px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 0.78rem;
        font-weight: 700;
        box-shadow: 0 8px 16px rgba(249, 115, 22, 0.35);
      }
      .content { margin-top: 22px; }
      .card {
        background: var(--card);
        border-radius: 18px;
        border: 1px solid rgba(0, 0, 0, 0.06);
        box-shadow: var(--shadow);
        padding: 20px;
      }
      .product-shell {
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 20px;
        align-items: center;
      }
      .image-wrap {
        background: #f7f5ef;
        border-radius: 16px;
        border: 1px solid var(--line);
        padding: 14px;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.6);
        display: grid;
        place-items: center;
      }
      .image-wrap img { width: 100%; max-height: 360px; object-fit: cover; border-radius: 12px; }
      .eyebrow {
        margin: 0;
        letter-spacing: 0.12em;
        font-size: 0.82rem;
        color: var(--muted);
        text-transform: uppercase;
      }
      h1 { margin: 4px 0 6px; font-size: clamp(1.8rem, 2.6vw, 2.4rem); letter-spacing: 0.4px; }
      .price {
        margin: 0 0 12px;
        font-size: 1.35rem;
        font-weight: 800;
        color: var(--accent);
      }
      .desc { margin: 0 0 14px; color: var(--muted); line-height: 1.55; }
      .stock-row {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 10px;
        border-radius: 12px;
        background: #f7f5ed;
        border: 1px solid var(--line);
        font-weight: 700;
        color: var(--ink);
      }
      .dot { width: 10px; height: 10px; border-radius: 50%; display: inline-block; }
      .cta { margin-top: 16px; display: flex; gap: 10px; align-items: center; flex-wrap: wrap; }
      .primary {
        border: none;
        background: var(--accent);
        color: #0f172a;
        padding: 12px 16px;
        border-radius: 12px;
        font-weight: 800;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        letter-spacing: 0.2px;
        box-shadow: 0 12px 24px rgba(249, 115, 22, 0.35);
        transition: transform 0.15s ease, box-shadow 0.2s ease;
      }
      .primary:hover:not(:disabled) { transform: translateY(-2px); box-shadow: 0 16px 28px rgba(249, 115, 22, 0.4); }
      .primary:disabled { background: #e2e8f0; color: #6b7280; box-shadow: none; cursor: not-allowed; }
      .muted { color: var(--muted); }
      .qty {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #f7f5ed;
        border: 1px solid var(--line);
        border-radius: 12px;
        padding: 6px 8px;
      }
      .qty button {
        background: transparent;
        border: none;
        font-weight: 800;
        font-size: 1.1rem;
        cursor: pointer;
        padding: 6px 8px;
        color: var(--ink);
      }
      .qty input {
        width: 64px;
        border: 1px solid var(--line);
        border-radius: 10px;
        padding: 8px;
        font-weight: 700;
        text-align: center;
      }
      .related { margin-top: 18px; }
      .related-head { display: flex; align-items: center; justify-content: space-between; gap: 10px; }
      .related-head h2 { margin: 0; font-size: 1.1rem; }
      .related-head a { color: var(--ink); text-decoration: none; font-weight: 700; }
      .related-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 12px; margin-top: 10px; }
      .related-card {
        text-decoration: none;
        color: inherit;
        background: #ffffff;
        border: 1px solid var(--line);
        border-radius: 14px;
        box-shadow: 0 10px 22px rgba(0,0,0,0.06);
        overflow: hidden;
        transition: transform 0.18s ease, box-shadow 0.2s ease;
      }
      .related-card:hover { transform: translateY(-3px); box-shadow: 0 18px 28px rgba(0,0,0,0.12); }
      .rimg { background: #f7f5ef; padding: 10px; display: grid; place-items: center; }
      .rimg img { width: 100%; height: 140px; object-fit: cover; border-radius: 10px; }
      .rmeta { padding: 10px 12px 12px; display: grid; gap: 4px; }
      .rname { margin: 0; font-weight: 700; }
      .rprice { margin: 0; color: var(--muted); font-weight: 600; }
      .empty-card {
        text-align: center;
        padding: 22px;
        border-radius: 16px;
        border: 1px dashed var(--line);
        background: #fdfbf7;
        color: var(--muted);
      }
      .toast {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background: var(--ink);
        color: #f8fafc;
        padding: 12px 14px;
        border-radius: 14px;
        box-shadow: 0 14px 30px rgba(15, 23, 42, 0.25);
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 0.2s ease, transform 0.2s ease;
        pointer-events: none;
      }
      .toast.show { opacity: 1; transform: translateY(0); }
      @media (max-width: 820px) {
        .product-shell { grid-template-columns: 1fr; }
        .image-wrap img { max-height: 300px; }
      }
      @media (max-width: 540px) {
        .page { padding: 20px 14px 60px; }
        .topbar { flex-direction: column; align-items: flex-start; }
      }
    </style>
  </head>
  <body>
    <div class="page">
      <header class="topbar">
        <a class="back" href="/shopping">
          <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6" />
          </svg>
          Back to shop
        </a>
        <div class="brand">Republic Surprise</div>
        <div class="actions">
          <a class="icon-btn cart-badge" href="/cart" title="Cart">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="9" cy="21" r="1"></circle>
              <circle cx="20" cy="21" r="1"></circle>
              <path d="M1 1h4l1.68 10.06a2 2 0 0 0 2 1.69h7.72a2 2 0 0 0 2-1.69L19 6H6" />
            </svg>
            <span class="cart-count" data-cart-count><%= cartCount || 0 %></span>
          </a>
        </div>
      </header>

      <main class="content">
        <% if (!product) { %>
          <div class="card empty-card">
            <p>No product found.</p>
            <p><a href="/shopping">Return to shop</a></p>
          </div>
        <% } else { %>
          <section class="card product-shell">
            <div class="image-wrap">
              <img src="<%= product.image %>" alt="<%= product.name %>" />
            </div>
            <div class="details">
              <p class="eyebrow"><%= product.badge %></p>
              <h1><%= product.name %></h1>
              <p class="price">$<%= Number(product.price || 0).toFixed(2) %></p>
              <p class="desc"><%= product.description %></p>
              <div class="stock-row">
                <span class="dot" style="background:<%= product.stock > 0 ? '#10b981' : '#ef4444' %>"></span>
                <%= product.stock > 0 ? 'In stock' : 'Out of stock' %>
              </div>
              <div class="cta">
                <div class="qty">
                  <button type="button" id="decQty" aria-label="Decrease quantity">-</button>
                  <input type="number" id="qty" min="1" value="1" <%= product.stock > 0 ? `max="${product.stock}"` : '' %> />
                  <button type="button" id="incQty" aria-label="Increase quantity">+</button>
                </div>
                <button id="addBtn" class="primary" type="button" <%= product.stock > 0 ? '' : 'disabled' %>>
                  <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="9" cy="21" r="1"></circle>
                    <circle cx="20" cy="21" r="1"></circle>
                    <path d="M1 1h4l1.68 10.06a2 2 0 0 0 2 1.69h7.72a2 2 0 0 0 2-1.69L19 6H6" />
                  </svg>
                  Add to cart
                </button>
                <span class="muted">Ships in 3-5 days</span>
              </div>
            </div>
          </section>

          <% if (catalog && catalog.length > 1) { %>
            <section class="related">
              <div class="related-head">
                <h2>More collectibles</h2>
                <a href="/shopping">Browse all</a>
              </div>
              <div class="related-grid">
                <% catalog.filter(function(item) { return !product || item.id !== product.id; }).slice(0, 3).forEach(function(item) { %>
                  <a class="related-card" href="/product?id=<%= encodeURIComponent(item.id) %>">
                    <div class="rimg">
                      <img src="<%= item.image %>" alt="<%= item.name %>" />
                    </div>
                    <div class="rmeta">
                      <p class="rname"><%= item.name %></p>
                      <p class="rprice">$<%= Number(item.price || 0).toFixed(2) %></p>
                    </div>
                  </a>
                <% }) %>
              </div>
            </section>
          <% } %>
        <% } %>
      </main>
    </div>
    <div class="toast" id="toast" aria-live="polite"></div>
    <script>
      const product = <%- JSON.stringify(product || null) %>;
      const catalog = <%- JSON.stringify(catalog || []) %>;
      const cartCountEl = document.querySelector('[data-cart-count]');
      const toastEl = document.getElementById('toast');
      const addBtn = document.getElementById('addBtn');
      const qtyInput = document.getElementById('qty');
      const decBtn = document.getElementById('decQty');
      const incBtn = document.getElementById('incQty');

      const updateCartBadge = (count) => {
        if (!cartCountEl) return;
        const safe = Number(count) || 0;
        cartCountEl.textContent = safe;
      };

      const toast = (message) => {
        if (!toastEl) return;
        toastEl.textContent = message;
        toastEl.classList.add('show');
        setTimeout(() => toastEl.classList.remove('show'), 1400);
      };

      const addToCart = async () => {
        if (!product) return;
        const qty = getQty();
        if (!qty) return;
        try {
          const response = await fetch('/cart/add', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: product.id, name: product.name, price: product.price, qty })
          });
          if (!response.ok) throw new Error('cart');
          const data = await response.json();
          updateCartBadge(data.cartCount);
          toast('Added to cart');
        } catch (_err) {
          toast('Unable to add to cart');
        }
      };

      const getQty = () => {
        if (!qtyInput) return 1;
        const max = Number(qtyInput.max || product?.stock || 0) || Infinity;
        const raw = parseInt(qtyInput.value, 10);
        const safe = Math.min(Math.max(raw || 1, 1), max);
        qtyInput.value = safe;
        return safe;
      };

      if (decBtn) decBtn.addEventListener('click', () => {
        if (!qtyInput) return;
        qtyInput.value = Math.max(1, (parseInt(qtyInput.value, 10) || 1) - 1);
      });

      if (incBtn) incBtn.addEventListener('click', () => {
        if (!qtyInput) return;
        const max = Number(qtyInput.max || product?.stock || 0) || Infinity;
        qtyInput.value = Math.min(max, (parseInt(qtyInput.value, 10) || 1) + 1);
      });

      if (addBtn) addBtn.addEventListener('click', addToCart);
    </script>
  </body>
</html>
