<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delivery Dashboard | Republic Surprise</title>
    <style>
      :root {
        --text: #152035;
        --muted: #6b7280;
        --card: #ffffff;
        --accent: #ffb703;
        --accent-2: #0c9488;
        --bg: radial-gradient(circle at 18% 18%, #ffd6a5 0, rgba(255,214,165,0) 32%), radial-gradient(circle at 78% 0%, #a0e8af 0, rgba(160,232,175,0) 32%), #fef6e4;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Segoe UI", Tahoma, sans-serif;
        background: var(--bg);
        color: var(--text);
        min-height: 100vh;
      }
      .page {
        padding: 120px 20px 60px;
        display: flex;
        justify-content: center;
      }
      .card {
        width: min(760px, 100%);
        background: var(--card);
        border-radius: 30px;
        padding: 36px 40px;
        box-shadow: 0 30px 60px rgba(15, 23, 42, 0.25);
        text-align: center;
      }
      .card h1 {
        margin: 0 0 4px;
        font-size: 2rem;
      }
      .card p {
        margin: 0 0 26px;
        color: var(--muted);
      }
      .stats {
        display: flex;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 32px;
      }
      .stat {
        flex: 1;
        background: #fdf8f0;
        border-radius: 18px;
        padding: 16px 12px;
        box-shadow: inset 0 0 0 1px rgba(0,0,0,0.05);
      }
      .stat .label {
        font-size: 0.9rem;
        color: var(--muted);
        margin-bottom: 6px;
      }
      .stat .value {
        font-size: 1.8rem;
        font-weight: 700;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 0 auto;
        border-radius: 18px;
        overflow: hidden;
      }
      th, td {
        padding: 16px 18px;
        background: #fff1db;
        border: 1px solid rgba(0,0,0,0.05);
        color: var(--text);
      }
      th {
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        background: #fff3db;
      }
      tr td a {
        color: #0b3b35;
        font-weight: 700;
      }
      .action-btn {
        background: var(--accent);
        color: #0f172a;
        border-radius: 12px;
        padding: 10px 18px;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        justify-content: center;
        align-items: center;
      }
      .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(255,183,3,0.25);
      }
      .links {
        margin-top: 28px;
        display: flex;
        justify-content: center;
        gap: 12px;
      }
      .links .history-btn {
        background: var(--accent-2);
        color: #fff;
        padding: 12px 32px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: 700;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="page">
      <div class="card">
        <h1>Delivery Dashboard</h1>
        <p>Hello, <strong><%= deliveryName %></strong>!</p>
        <div class="stats">
          <div class="stat">
            <div class="label">Assigned</div>
            <div class="value"><%= typeof stats?.assigned === 'number' ? stats.assigned : 0 %></div>
          </div>
          <div class="stat">
            <div class="label">Pending</div>
            <div class="value"><%= typeof stats?.pending === 'number' ? stats.pending : 0 %></div>
          </div>
          <div class="stat">
            <div class="label">Delivered (Pending)</div>
            <div class="value"><%= typeof stats?.delivered_pending === 'number' ? stats.delivered_pending : 0 %></div>
          </div>
        </div>

        <% if (deliveries && deliveries.length) { %>
          <table>
            <thead>
              <tr>
                <th>Delivery-ID</th>
                <th>Delivery Address</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% deliveries.forEach(function(d){ %>
                <tr>
                  <td>
                    <a href="/delivery/order/<%= d.id %>"><%= d.deliveryId || d.orderNumber %></a>
                  </td>
                  <td><%= d.address || 'N/A' %></td>
                  <td>
                    <% const state = (d.status || '').toLowerCase(); %>
                    <% const refundState = (d.refundStatus || '').toLowerCase(); %>
                    <% if (refundState === 'approved') { %>
                      Refunded
                    <% } else if (refundState === 'rejected') { %>
                      Refund rejected
                    <% } else if (state === 'out_for_delivery') { %>
                      Out for Delivery
                    <% } else if (state === 'delivered_pending') { %>
                      Delivered (Pending)
                    <% } else { %>
                      <%= d.status %>
                    <% } %>
                  </td>
                  <td>
                    <% if (state === 'out_for_delivery') { %>
                      <a class="action-btn" href="/delivery/order/<%= d.id %>">Deliver</a>
                    <% } else if (state === 'delivered_pending') { %>
                      <a class="action-btn" href="/delivery/order/<%= d.id %>">View Proof</a>
                    <% } else { %>
                      <a class="action-btn" href="/delivery/order/<%= d.id %>">View</a>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>No assigned deliveries yet.</p>
        <% } %>

        <% if (typeof pendingDeliveries !== 'undefined' && pendingDeliveries && pendingDeliveries.length) { %>
          <div style="margin-top:36px; text-align:left;">
            <h3>Available deliveries to claim</h3>
          </div>
          <table>
            <thead>
              <tr>
                <th>Delivery ID</th>
                <th>Address</th>
                <th>Customer</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% pendingDeliveries.forEach(function(d){ %>
                <tr>
                  <td><a href="/delivery/order/<%= d.id %>"><%= d.deliveryId || d.orderNumber %></a></td>
                  <td><%= d.address || 'N/A' %></td>
                  <td><%= d.customerName || 'Guest' %></td>
                  <td>
                    <form method="POST" action="/deliveries/<%= d.id %>/claim" style="margin:0;">
                      <button type="submit" class="action-btn">Assign Delivery</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>

        <div class="links">
          <a class="history-btn" href="/delivery-history">Delivery History</a>
        </div>
      </div>
    </div>
  </body>
</html>
