<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User History | Republic Surprise</title>
    <style>
      :root {
        --bg: #f8f4ec;
        --ink: #1f2937;
        --muted: #6b7280;
        --card: #ffffff;
        --accent: #ff6b35;
        --accent-2: #005f73;
        --shadow: 0 22px 50px rgba(15, 23, 42, 0.15);
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Segoe UI", Tahoma, sans-serif;
        background:
          radial-gradient(circle at 15% 20%, rgba(244, 211, 94, 0.45), transparent 50%),
          radial-gradient(circle at 85% 5%, rgba(0, 95, 115, 0.2), transparent 40%),
          linear-gradient(180deg, #fffaf0 0%, #f7f1e6 55%, #f2efe6 100%);
        color: var(--ink);
        min-height: 100vh;
        padding: 132px 16px 96px;
      }
      header, footer {
        position: fixed;
        left: 0;
        right: 0;
        padding: 14px 18px;
        text-align: center;
        background: rgba(255,255,255,0.7);
        backdrop-filter: blur(6px);
        color: var(--ink);
        z-index: 5;
      }
      header { top: 0; }
      footer { bottom: 0; }
      header h2, footer p { margin: 0; letter-spacing: 0.5px; }
      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.9);
        color: var(--ink);
        text-decoration: none;
        font-weight: 700;
        box-shadow: 0 12px 24px rgba(15, 23, 42, 0.12);
      }
      .top-row {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
      }
      .back-link span {
        font-size: 1.1rem;
        line-height: 1;
      }
      .layout {
        max-width: 1100px;
        margin: 0 auto;
        display: grid;
        gap: 20px;
      }
      .title-card {
        background: var(--card);
        border-radius: 18px;
        padding: 24px 26px;
        box-shadow: var(--shadow);
        border: 1px solid rgba(0, 0, 0, 0.06);
      }
      h1 {
        margin: 0 0 6px;
        letter-spacing: 0.5px;
        font-size: clamp(1.6rem, 2vw, 2.1rem);
      }
      p { margin: 0; color: var(--muted); }
      .table-card {
        background: var(--card);
        border-radius: 18px;
        padding: 18px;
        box-shadow: var(--shadow);
        border: 1px solid rgba(0, 0, 0, 0.06);
        overflow-x: auto;
      }
      .filters {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-bottom: 12px;
      }
      .filters input {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.12);
        min-width: 220px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        min-width: 980px;
      }
      th, td {
        text-align: left;
        padding: 12px 10px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.08);
        vertical-align: top;
      }
      th {
        font-size: 0.92rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--muted);
      }
      .empty {
        padding: 24px;
        text-align: center;
        color: var(--muted);
      }
      .changes {
        margin: 0;
        padding-left: 16px;
      }
      .snapshot {
        display: inline-block;
      }
      .snapshot summary {
        cursor: pointer;
        color: var(--accent-2);
        font-weight: 700;
        text-decoration: underline;
        list-style: none;
      }
      .snapshot summary::-webkit-details-marker {
        display: none;
      }
      pre {
        margin: 8px 0 0;
        background: #f7f7f7;
        padding: 8px 10px;
        border-radius: 10px;
        font-size: 0.85rem;
        overflow: auto;
      }
      .hash {
        font-family: "Courier New", monospace;
        font-size: 0.85rem;
        color: #1f2937;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="layout">
      <div class="top-row">
        <a class="back-link" href="/admin/users"><span>&larr;</span> Back</a>
      </div>
      <section class="title-card">
        <h1>Audit History</h1>
        <p>
          <%= user.name %> (<%= user.walletAddress %>) - <%= user.active === false ? 'Deactivated' : 'Active' %>
        </p>
      </section>

      <section class="table-card">
        <% const formatTimestamp = (value) => { 
          if (!value) return '-';
          const parsed = new Date(value);
          if (Number.isNaN(parsed.getTime())) return value;
          return parsed.toLocaleString('sv-SE', { timeZone: 'Asia/Singapore', year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit', hour12: false }) + ' SGT';
        }; %>
        <% const displayHistory = (history || []).slice().reverse(); %>
        <% if (displayHistory.length === 0) { %>
          <div class="empty">No audit history available.</div>
        <% } else { %>
          <div class="filters">
            <input type="text" id="filterAction" placeholder="Filter by action (e.g. updated)" aria-label="Filter by action">
            <input type="text" id="filterActor" placeholder="Filter by actor (wallet)" aria-label="Filter by actor">
          </div>
          <table>
            <thead>
              <tr>
                <th>Action</th>
                <th>Timestamp</th>
                <th>Actor</th>
                <th>Tx Hash</th>
                <th>Changes</th>
                <th>Snapshot</th>
              </tr>
            </thead>
            <tbody>
              <% displayHistory.forEach(function(entry) { %>
                <tr class="history-row"
                    data-action="<%= (entry.action || '').toLowerCase() %>"
                    data-actor="<%= (entry.actor || '').toLowerCase() %>">
                  <td><%= entry.action %></td>
                  <td><%= formatTimestamp(entry.timestamp) %></td>
                  <td><%= entry.actor %></td>
                  <td class="hash"><%= entry.hash || '-' %></td>
                  <td>
                    <% if (entry.changes && entry.changes.length) { %>
                      <ul class="changes">
                        <% entry.changes.forEach(function(change) { %>
                          <li><%= change.field %>: <%= change.from %> -> <%= change.to %></li>
                        <% }) %>
                      </ul>
                    <% } else { %>
                      -
                    <% } %>
                  </td>
                  <td>
                    <details class="snapshot">
                      <summary>View</summary>
                      <pre><%= JSON.stringify(entry.snapshot || {}, null, 2) %></pre>
                    </details>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </section>
    </main>
    <%- include('partials/footer') %>
    <script>
      const actionInput = document.getElementById('filterAction');
      const actorInput = document.getElementById('filterActor');
      const rows = Array.from(document.querySelectorAll('.history-row'));
      const applyFilters = () => {
        const aVal = (actionInput?.value || '').toLowerCase();
        const actorVal = (actorInput?.value || '').toLowerCase();
        rows.forEach((row) => {
          const act = (row.dataset.action || '').toLowerCase();
          const actor = (row.dataset.actor || '').toLowerCase();
          const matchA = !aVal || act.includes(aVal);
          const matchActor = !actorVal || actor.includes(actorVal);
          row.style.display = matchA && matchActor ? '' : 'none';
        });
      };
      if (actionInput) actionInput.addEventListener('input', applyFilters);
      if (actorInput) actorInput.addEventListener('input', applyFilters);
    </script>
  </body>
</html>
