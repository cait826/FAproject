<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Dashboard | Republic Surprise</title>
    <style>
      :root {
        --bg: #fef6e4;
        --card: #ffffff;
        --accent: #ff9f1c;
        --accent-2: #2ec4b6;
        --text: #172b4d;
        --muted: #5f6c7b;
        --line: rgba(0,0,0,0.06);
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Segoe UI", Tahoma, sans-serif;
        background: radial-gradient(circle at 18% 18%, #ffd6a5 0, rgba(255,214,165,0) 32%), radial-gradient(circle at 78% 0%, #a0e8af 0, rgba(160,232,175,0) 32%), var(--bg);
        color: var(--text);
        min-height: 100vh;
        padding: 72px 16px 64px;
      }
      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.9);
        color: var(--text);
        text-decoration: none;
        font-weight: 700;
        box-shadow: 0 12px 24px rgba(15, 23, 42, 0.12);
      }
      .top-row {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
      }
      .back-link span {
        font-size: 1.1rem;
        line-height: 1;
      }
      .page {
        max-width: 960px;
        margin: 0 auto;
      }
      h1 { margin: 0 0 10px; letter-spacing: 0.4px; }
      p { margin: 0 0 16px; color: var(--muted); }
      .card {
        background: var(--card);
        border: 1px solid var(--line);
        border-radius: 18px;
        padding: 22px;
        box-shadow: 0 18px 36px rgba(0,0,0,0.12);
      }
      .filters {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-bottom: 12px;
      }
      .filters input {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(0,0,0,0.12);
        min-width: 200px;
      }
      table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
      }
      th, td {
        text-align: left;
        padding: 12px 14px;
        background: #fefaf2;
        border: 1px solid var(--line);
      }
      th { background: #ffe8c9; }
      .pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        font-weight: 700;
      }
      .pill.pending { background: rgba(255,159,28,0.15); color: #b45309; }
      .pill.confirmed { background: rgba(46,196,182,0.18); color: #0b3b35; }
      .action {
        border: none;
        background: var(--accent);
        color: #0f172a;
        border-radius: 10px;
        padding: 10px 12px;
        font-weight: 700;
        cursor: pointer;
      }
      .action:disabled {
        background: #e2e8f0;
        color: #6b7280;
        cursor: not-allowed;
      }
      header, footer {
        position: fixed;
        left: 0;
        right: 0;
        padding: 14px 18px;
        text-align: center;
        background: rgba(255,255,255,0.7);
        backdrop-filter: blur(6px);
        color: var(--text);
      }
      header { top: 0; }
      footer { bottom: 0; }
      header h2, footer p { margin: 0; letter-spacing: 0.5px; }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <div class="page">
      <div class="top-row">
        <a class="back-link" href="/admin/dashboard"><span>&larr;</span> Back</a>
      </div>
      <div class="card">
        <h1>Order Dashboard</h1>
        <p>Review incoming orders and confirm delivery completion.</p>
        <div class="filters">
          <input type="text" id="filterOrder" placeholder="Filter by order number" aria-label="Filter by order number">
          <input type="text" id="filterAction" placeholder="Filter by action (e.g. order creation)" aria-label="Filter by action">
        </div>
        <% if (orders && orders.length) { %>
          <table>
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Delivery</th>
                <th>Product</th>
                <th>Customer Wallet</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(function(order) { %>
                <% const relatedDeliveries = (deliveries || []).filter(function(d){ return (d.orderNumber || d.id) === order.id; }); %>
                <tr class="order-row"
                    data-order="<%= order.id %>"
                    data-action="<%= (order.action || order.status || '').toLowerCase() %>">
                  <td><a href="/admin/orders/<%= order.id %>"><%= order.id %></a></td>
                  <td>
                    <% if (relatedDeliveries.length) { %>
                      <% relatedDeliveries.forEach(function(del, di){ 
                           const label = del.deliveryId || ('DEL-' + ('000' + (di+1)).slice(-3));
                           const linkId = del.deliveryId || del.id;
                       %>
                        <div><a href="/admin/delivery/<%= linkId %>"><%= label %></a></div>
                      <% }); %>
                    <% } else { %>-<% } %>
                  </td>
                  <td><%= order.product %></td>
                  <td><%= order.customer %></td>
                  <td>$<%= Number(order.price || 0).toFixed(2) %></td>
                  <td><%= order.qty %></td>
                  <td>
                    <span class="pill <%= order.status === 'Confirmed' || order.status === 'Completed' ? 'confirmed' : 'pending' %>">
                      <%= order.status %>
                    </span>
                  </td>
                  <td>
                    <% const showConfirm = order.status === 'Pending Delivery Confirmation'; %>
                    <% if (showConfirm) { %>
                      <div style="display:flex; flex-direction:column; gap:6px;">
                        <a class="action" style="text-decoration:none; display:inline-block; text-align:center;" href="/admin/orders/check/<%= order.id %>">Confirm order</a>
                        <small style="color:#b45309;">Review proof before confirming.</small>
                      </div>
                    <% } else { %>
                      <button class="action" type="button" disabled>Done</button>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>No orders yet.</p>
        <% } %>
      </div>
    </div>
    <%- include('partials/footer') %>
    <script>
      const orderFilter = document.getElementById('filterOrder');
      const actionFilter = document.getElementById('filterAction');
      const rows = Array.from(document.querySelectorAll('.order-row'));
      const applyFilter = () => {
        const oVal = (orderFilter?.value || '').toLowerCase();
        const aVal = (actionFilter?.value || '').toLowerCase();
        rows.forEach((row) => {
          const o = (row.dataset.order || '').toLowerCase();
          const a = (row.dataset.action || '').toLowerCase();
          const matchO = !oVal || o.includes(oVal);
          const matchA = !aVal || a.includes(aVal);
          row.style.display = matchO && matchA ? '' : 'none';
        });
      };
      if (orderFilter) orderFilter.addEventListener('input', applyFilter);
      if (actionFilter) actionFilter.addEventListener('input', applyFilter);
    </script>
  </body>
</html>
